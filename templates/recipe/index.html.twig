{% extends 'base.html.twig' %}

{% block title %}Recettes
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Toutes les recettes
		</h1>
		<ul>
			{% for recipe in recipes %}
				<li>
					<h4 class="text-uppercase">{{ recipe.title }}</h4>
					<p>{{ recipe.content }}</p>
					<a href="{{ path('recipe.show', {'slug' : recipe.slug, 'id': recipe.id}) }}" class="btn btn-primary">Voir la recette</a>
					<p class="fst-italic">Ajoutée le :
						{{ recipe.createdAt|date('d/m/Y') }}</p>
				</li>
			{% else %}
				<li>Aucune recette n'a été trouvée</li>
			{% endfor %}
			<a href="{{ path('recipe.new') }}" class="btn btn-success">Ajouter une recette</a>
		{% endblock %}
