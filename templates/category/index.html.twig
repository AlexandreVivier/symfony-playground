{% extends 'admin/admin.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Toutes les catégories</h1>

		<ul>
			{% for category in categories %}
				<li>
					<h4 class="text-uppercase">{{ category.name }}</h4>
					<a href="{{ path('admin.category.show', {'slug' : category.slug, 'id': category.id}) }}" class="btn btn-primary">Voir la catégorie</a>
					<a href="{{ path('admin.category.edit', { 'id': category.id}) }}" class="btn btn-warning">Modifier la catégorie</a>
					<form
						method="post" action="{{ path('admin.category.delete', {id: category.id}) }}" style="display: inline-block">
						{# {{ csrf_token('delete' ~ category.id) }} #}
						<input type="hidden" name="_method" value="DELETE">
						<button type="submit" class="btn btn-danger">Supprimer</button>
					</form>
				</li>
			{% else %}
				<li>Aucune catégorie n'a été trouvée</li>
			{% endfor %}
			<a href="{{ path('admin.category.new') }}" class="btn btn-success">Ajouter une catégorie</a>
		</ul>

	</div>
{% endblock %}
